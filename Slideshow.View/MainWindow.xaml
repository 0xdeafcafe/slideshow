<Window x:Class="Slideshow.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slideshow" Height="350" Width="525">
    <Grid>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="40">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBox x:Name="txtPath" Width="350" Margin="20,0,0,0" Text="\\HUB\"></TextBox>
				<Button x:Name="btnGoooo" Margin="20,0,0,0" Click="btnGoooo_Click">Goooooo</Button>
			</StackPanel>
		</Grid>
		<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,40,0,0" Background="#FF3A3A3A">
			<Image x:Name="pictureBoxSlideshowMask" Stretch="UniformToFill" Opacity="0.4"></Image>
			<Image x:Name="pictureBoxSlideshow"></Image>
			
			<TextBlock x:Name="PathTextBox" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30,0,0,20" Foreground="White" Text="" Opacity="0.7" FontSize="32" FontFamily="Segoe WP" MouseLeftButtonUp="PathTextBox_MouseLeftButtonUp" />
		</Grid>
    </Grid>
</Window>
